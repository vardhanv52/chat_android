<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/msg"
        style="@style/text_regular_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Hey there"
        android:minWidth="140dp"
        android:background="@drawable/bg_me"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_regular_12"
        android:text="12-12-2020 11:23 AM"
        android:id="@+id/time"
        android:textColor="@color/grey_color"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/msg"
        app:layout_constraintTop_toBottomOf="@id/msg"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="3dp"
        android:src="@drawable/empty_bookmark"
        android:layout_marginEnd="5dp"
        android:id="@+id/like"
        app:tint="@color/secondaryColor"
        app:layout_constraintEnd_toStartOf="@id/msg"
        app:layout_constraintTop_toTopOf="@id/msg"/>

</androidx.constraintlayout.widget.ConstraintLayout>